@model List<Category>


<h1 align="center"></h1>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-info">
                <i class="bi bi-plus-square-fill"></i> Create New Category
            </a>
        </div>

    </div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
                <th class="col-2">ID</th>
                <th class="col-2">Category Name</th>
                <th class="col-2">Display Order</th>
                <th class="col-6">Action </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td >@obj.ID</td>
                <td >@obj.Name</td>
                <td >@obj.DisplayOrder</td>
              
                <td>
                    <div class="w-75 btn-group" role="group">
                                    <a asp-action="Edit" asp-route-ID="@obj.ID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i> Edit
                                 </a>
                            <a asp-action="Delete"  asp-route-ID="@obj.ID" class="btn btn-Delete mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                    </div>

                </td>
            </tr>
        }

    </tbody>
</table>    
</div>
